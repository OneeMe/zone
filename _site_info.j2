<div class="head">
  <div class="inner">
    <div class="head_logo">
      <a href="{{ linkify('/') }}">
        {% if site.logo %}
          <img src="{{ site.logo.src|thumbnail('ss') }}" alt="{{ site.name }}"/>
        {% endif %}
        <span>{{ site.name }}</span>
      </a>
    </div>
    <div class="head_subscribe">
      {% if features.algolia %}
        <a href="#" class="js-search" data-id="{{ site.algolia_id }}" data-key="{{ site.algolia_key }}">
          <i class="icon icon-search" aria-label="Search"></i>
        </a>
      {% endif %}
      {% if features.post %}
        <button class="js-subscribe" data-feed="{{ linkify('/feed.xml') }}">Subscribe</button>
      {% endif %}
    </div>
  </div>
</div>
<div class="info">
  <div class="inner">
    <div class="info_main">
      <h1 class="info_title"><a class="h-card" rel="me" href="{{ linkify('/') }}">{{ site.name }}</a></h1>
      {% if site.summary %}
        <h2 class="info_subtitle">{{ site.summary }}</h2>
      {% endif %}
      <nav class="info_nav">
        {% for nav in site.nav_links -%}
          <a href="{{ nav.url }}"{% if nav.blank %} target="_blank"{% endif %}>{{ nav.title }}</a>
        {% endfor %}
      </nav>
    </div>
  </div>
</div>
