{% set socials = site.socials %}
{% if socials %}
  <div class="site_socials">
    {{ render_social_icons(site) }}
    <a href="{{ linkify('/feed.xml') }}">
      <i class="icon icon-feed" aria-hidden="true"></i>
    </a>
    {% if features.subscriber %}
    <div class="subscribe_button">
      <button class="js-subscribe text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">订阅</button>
    </div>
    {% endif %}
  </div>
{% endif %}
